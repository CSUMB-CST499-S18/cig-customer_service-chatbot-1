{
  "metadata": {
    "schemaVersion": "1.0",
    "importType": "LEX",
    "importFormat": "JSON"
  },
  "resource": {
    "name": "SetUpProcess",
    "version": "2",
    "fulfillmentActivity": {
      "type": "CodeHook",
      "codeHook": {
        "uri": "arn:aws:lambda:us-east-1:854206085631:function:CIGCustomerInquiryProcessor",
        "messageVersion": "1.0"
      }
    },
    "sampleUtterances": [
      "Set up {processType}",
      "How do I set up {processType}",
      "How can I set up {processType}",
      "Can I set up {processType}",
      "Where can I set up {processType}",
      "Where do I set up {processType}",
      "I want to set up {processType}"
    ],
    "slots": [
      {
        "name": "processType",
        "slotConstraint": "Required",
        "slotType": "ProcessType",
        "slotTypeVersion": "1",
        "valueElicitationPrompt": {
          "messages": [
            {
              "contentType": "PlainText",
              "content": "What would you like to setup? (Try \"auto pay\" or \"paperless billing\".)"
            }
          ],
          "maxAttempts": 2
        },
        "priority": 1,
        "sampleUtterances": []
      }
    ],
    "slotTypes": [
      {
        "description": "Different types of processes that customers can setup",
        "name": "ProcessType",
        "version": "1",
        "enumerationValues": [
          {
            "value": "auto pay",
            "synonyms": [
              "automatic payments",
              "automatic payment",
              "autopay",
              "autopayment",
              "autopayments",
              "auto payments",
              "auto payment",
              "auto",
              "recurring payments",
              "recurring pay",
              "recurring payment"
            ]
          },
          {
            "value": "paperless billing",
            "synonyms": [
              "paperless",
              "paperless bill",
              "paperless bills",
              "electronic bills",
              "electronic bill",
              "e bill",
              "e bills"
            ]
          }
        ],
        "valueSelectionStrategy": "TOP_RESOLUTION"
      }
    ]
  }
}