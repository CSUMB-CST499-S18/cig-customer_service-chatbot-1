{
  "metadata": {
    "schemaVersion": "1.0",
    "importType": "LEX",
    "importFormat": "JSON"
  },
  "resource": {
    "name": "ChangeInformation",
    "version": "3",
    "fulfillmentActivity": {
      "type": "CodeHook",
      "codeHook": {
        "uri": "arn:aws:lambda:us-east-1:854206085631:function:CIGCustomerInquiryProcessor",
        "messageVersion": "1.0"
      }
    },
    "sampleUtterances": [
      "Change {informationType}",
      "Can I change my {informationType}",
      "How can I change my {informationType}",
      "Where can I change my {informationType}",
      "I want to change my {informationType}",
      "I want a different {informationType}",
      "How do I set up a different {informationType}"
    ],
    "slots": [
      {
        "name": "informationType",
        "slotConstraint": "Required",
        "slotType": "InformationType",
        "slotTypeVersion": "1",
        "valueElicitationPrompt": {
          "messages": [
            {
              "contentType": "PlainText",
              "content": "What would you like to change? (Try \"due date\" or \"payment plan\".)"
            }
          ],
          "maxAttempts": 2
        },
        "priority": 1,
        "sampleUtterances": []
      }
    ],
    "slotTypes": [
      {
        "description": "Different types of information that the customer can modify",
        "name": "InformationType",
        "version": "1",
        "enumerationValues": [
          {
            "value": "due date",
            "synonyms": [
              "bill due date"
            ]
          },
          {
            "value": "payment plan",
            "synonyms": [
              "pay plan"
            ]
          }
        ],
        "valueSelectionStrategy": "TOP_RESOLUTION"
      }
    ]
  }
}