{
  "metadata": {
    "schemaVersion": "1.0",
    "importType": "LEX",
    "importFormat": "JSON"
  },
  "resource": {
    "name": "DifferentPaymentBot",
    "version": "1",
    "intents": [
      {
        "name": "DifferentPayment",
        "version": "3",
        "fulfillmentActivity": {
          "type": "CodeHook",
          "codeHook": {
            "uri": "arn:aws:lambda:us-east-1:255437011707:function:diffPayValues",
            "messageVersion": "1.0"
          }
        },
        "sampleUtterances": [
          "Why did my {value}",
          "My bill went {value}",
          "My payment went {value}",
          "Why am I getting charged {value}",
          "Why did my bill go {value}",
          "Why did my payment go {value}",
          "My payment is different",
          "My bill is different"
        ],
        "slots": [
          {
            "name": "value",
            "slotConstraint": "Required",
            "slotType": "ValueType",
            "slotTypeVersion": "1",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "Did it increase or decrease?"
                }
              ],
              "maxAttempts": 2
            },
            "priority": 1,
            "sampleUtterances": []
          }
        ]
      },
      {
        "name": "GetCopy",
        "version": "1",
        "fulfillmentActivity": {
          "type": "ReturnIntent"
        },
        "sampleUtterances": [
          "I want a copy of my {amtType}",
          "Where can I get a copy of my {amtType}",
          "How come I didn't get a {amtType}",
          "Where is my {amtType}",
          "I can't find my {amtType}",
          "How can I find my {amtType}"
        ],
        "slots": [
          {
            "name": "amtType",
            "slotConstraint": "Optional",
            "slotType": "AmountType",
            "slotTypeVersion": "1",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "Is it a bill or a payment?"
                }
              ],
              "maxAttempts": 2
            },
            "priority": 1,
            "sampleUtterances": []
          }
        ]
      }
    ],
    "slotTypes": [
      {
        "name": "ValueType",
        "version": "1",
        "enumerationValues": [
          {
            "value": "increase",
            "synonyms": [
              "higher",
              "up",
              "more",
              "payment increase",
              "bill increase"
            ]
          },
          {
            "value": "decrease",
            "synonyms": [
              "lower",
              "down",
              "less",
              "payment decrease",
              "bill decrease"
            ]
          }
        ],
        "valueSelectionStrategy": "TOP_RESOLUTION"
      },
      {
        "description": "Bill/Payment",
        "name": "AmountType",
        "version": "1",
        "enumerationValues": [
          {
            "value": "payment",
            "synonyms": [
              "bill"
            ]
          }
        ],
        "valueSelectionStrategy": "TOP_RESOLUTION"
      }
    ],
    "voiceId": "Salli",
    "childDirected": false,
    "locale": "en-US",
    "idleSessionTTLInSeconds": 300,
    "clarificationPrompt": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, can you please repeat that?"
        }
      ],
      "maxAttempts": 5
    },
    "abortStatement": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, I could not understand. Goodbye."
        }
      ]
    }
  }
}